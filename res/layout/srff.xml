<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/genelarkaplan"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@raw/srff" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textcik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ledcikis"
        android:layout_toRightOf="@+id/imageView1"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="#ffffff" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@raw/rsyazi"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/but2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="21dp"
        android:background="@raw/tablosr"
        android:src="@raw/tablosr" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/imageView2"
        android:scaleType="centerInside"
        android:src="@raw/dsr" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="25dp" 
       >

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="145dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\t\tS=1, R=0 girişlerinde, ‘Clk’ sinyalinin yükselen kenarı ile FF etkilenir ve Q=1 değerini alır.S, R girişleri durumlarını korurken, ‘Clk’ sinyali durum değiştirse dahi Q=1 durumu devam eder. S=1, R=0 durumunda iken, ‘Clk’ sinyalinin yükselen kenarının oluşturduğu Q=1 çıkışı, ‘set’ durumu olarak isimlendirilir.S=0, R=1 değerlerine sahip iken ‘Clk’ sinyalinin ilk yükselen kenarı ile Q=0, Q&apos;=1 değerleri oluşur. Bu durum S=0, R=1 olduğu sürece devam eder ve ‘sıfır (reset)’ konumu olarak adlandırılır.S=1, R=1 durumu çıkışta belirsizlik oluşturacağından bu durumdan kaçınılmalıdır. Belirsiz çıkış, FF’nin kullanıldığı devrede düzensiz çalışmaya neden olur."
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textnot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/textcik"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ledcikis"
        android:layout_alignRight="@+id/imageView3" />

    <Button
        android:id="@+id/but1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_toLeftOf="@+id/led1"
        android:layout_toRightOf="@+id/TextView01"
        android:text="0" />

    <Button
        android:id="@+id/but3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/but1"
        android:layout_below="@+id/but1"
        android:layout_toLeftOf="@+id/imageView1"
        android:text="0" />

    <Button
        android:id="@+id/but2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/but3"
        android:layout_below="@+id/but3"
        android:layout_toLeftOf="@+id/imageView1"
        android:text="0" />

    <ImageView
        android:id="@+id/led3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/textcik"
        android:background="@raw/miniledy"
        android:src="@raw/miniledy" />

    <ImageView
        android:id="@+id/led2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignTop="@+id/TextView01"
        android:src="@raw/miniledy" />

    <ImageView
        android:id="@+id/led1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/ledcikis"
        android:background="@raw/miniledy"
        android:src="@raw/miniledy" />

    <ImageView
        android:id="@+id/ledcikis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginRight="16dp"
        android:src="@raw/miniledy" />

</RelativeLayout>