<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/genelarkaplan"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@raw/tff" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:text="B"
        android:textAppearance="?android:attr/textAppearanceLarge"   android:textColor="#ffffff" />

    <Button
        android:id="@+id/but1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toLeftOf="@+id/imageView1"
        android:text="0" />

    <ImageView
        android:id="@+id/led2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/led1"
        android:src="@raw/miniledy" />

    <TextView
        android:id="@+id/textcik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ledcikis"
        android:layout_toRightOf="@+id/imageView1"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="#ffffff" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@raw/tyazi"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/but2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="21dp"
        android:src="@raw/tablotff" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="25dp" 
       >

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="145dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 	J-K FF’nin girişlerinin birleştirilip tek giriş olarak kullanılmasıyla oluşan devre, ‘Toggle
FF’ (T tipi FF) olarak isimlendirilir. ‘Toggle’, durumdan duruma geçme
demektir. T tipi FF’de; T=1 iken, tetikleme sinyalinin uygulanmasıyla sahip olunan çıkışın
terslenmiş hali elde edilir.
	T tipi FF’de Q=0 ve T=0 iken, ‘Clk’ sinyalinin gelmesi durumunda çıkışta Q=0 değeri
korunur. Q=0 ve T=1 değerlerinde, ilk gelen ‘Clk’ sinyali ile çıkış durum değiştirerek bir
önceki durumun tersi olur ve Q=1 değerini alır.
	Q=1 ve T=0 iken, ‘Clk’ sinyali uygulansa bile devre sahip olduğu çıkışı korur ve Q=1
değerini alır. Q=1, T=1 iken ‘Clk’ sinyali ile çıkış terslenir ve Q=0 olur."
        android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textnot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/textcik"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/but2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/but1"
        android:layout_toLeftOf="@+id/imageView1"
        android:text="0" />

    <ImageView
        android:id="@+id/led1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView02"
        android:layout_toRightOf="@+id/but1"
        android:background="@raw/miniledy"
        android:src="@raw/miniledy" />

    <ImageView
        android:id="@+id/ledcikis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/led1"
        android:layout_toLeftOf="@+id/textcik"
        android:src="@raw/miniledy" />

</RelativeLayout>